    $ccusersearch = $_POST['searchinput'];


    $ccselectsql = "Select * from tbl_product where product_name like '%".$ccusersearch."%'
    OR product_id like '%".$ccusersearch."%'
    OR category like '%".$ccusersearch."%'
    ";
