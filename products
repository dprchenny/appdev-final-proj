        echo "<td>".$ccfieldname['product_name']."</td>";
        echo "<td>".$ccfieldname['description']."</td>";
        echo "<td>".$ccfieldname['price']."</td>";
        echo "<td>".$ccfieldname['available_quantity']."</td>";
